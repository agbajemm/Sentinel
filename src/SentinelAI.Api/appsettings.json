{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "SentinelAI": "Debug"
    }
  },
  "AllowedHosts": "*",
  
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=sentinel_ai;Username=sentinel_user;Password=${DB_PASSWORD};SSL Mode=Prefer;",
    "Redis": "localhost:6379,password=${REDIS_PASSWORD},ssl=false,abortConnect=false"
  },
  
  "AzureAIFoundry": {
    "Endpoint": "${AZURE_AI_FOUNDRY_ENDPOINT}",
    "ApiKey": "${AZURE_AI_FOUNDRY_API_KEY}",
    "ProjectName": "${AZURE_AI_FOUNDRY_PROJECT_NAME}",
    "ApiVersion": "2024-07-01-preview",
    "DefaultTimeoutSeconds": 30,
    "MaxRetries": 3,
    "AgentIds": {
      "MasterOrchestrator": "${AGENT_ORCHESTRATOR_ID}",
      "TransactionAnalyzer": "${AGENT_TXN_ANALYZER_ID}",
      "BehaviorProfiler": "${AGENT_BEHAVIOR_PROFILER_ID}",
      "RiskScorer": "${AGENT_RISK_SCORER_ID}",
      "TerminalMonitor": "${AGENT_TERMINAL_MONITOR_ID}",
      "AgentProfiler": "${AGENT_PROFILER_ID}",
      "MuleHunter": "${AGENT_MULE_HUNTER_ID}",
      "GeoValidator": "${AGENT_GEO_VALIDATOR_ID}",
      "IdentityVerifier": "${AGENT_IDENTITY_VERIFIER_ID}",
      "SyntheticDetector": "${AGENT_SYNTHETIC_DETECTOR_ID}",
      "GraphAnalyzer": "${AGENT_GRAPH_ANALYZER_ID}",
      "EmployeeBehaviorAnalyzer": "${AGENT_EMPLOYEE_BEHAVIOR_ID}",
      "ControlBypassDetector": "${AGENT_CONTROL_BYPASS_ID}",
      "GraphBuilder": "${AGENT_GRAPH_BUILDER_ID}",
      "NetworkAnalyzer": "${AGENT_NETWORK_ANALYZER_ID}",
      "CaseBuilder": "${AGENT_CASE_BUILDER_ID}",
      "ReportGenerator": "${AGENT_REPORT_GENERATOR_ID}"
    }
  },
  
  "AzureOpenAI": {
    "Endpoint": "${AZURE_OPENAI_ENDPOINT}",
    "ApiKey": "${AZURE_OPENAI_API_KEY}",
    "DeploymentName": "${AZURE_OPENAI_DEPLOYMENT_NAME}",
    "ApiVersion": "2024-02-15-preview"
  },
  
  "Agents": {
    "Configurations": {
      "MasterOrchestrator": {
        "AgentId": "AGT-ORCH-001",
        "Name": "Master Orchestrator",
        "AzureAgentId": "${AGENT_ORCHESTRATOR_ID}",
        "ModelDeployment": "${AZURE_OPENAI_DEPLOYMENT_NAME}",
        "Temperature": 0.1,
        "MaxTokens": 4000,
        "IsEnabled": true
      },
      "TransactionAnalyzer": {
        "AgentId": "AGT-TXN-001",
        "Name": "Transaction Analyzer",
        "AzureAgentId": "${AGENT_TXN_ANALYZER_ID}",
        "ModelDeployment": "${AZURE_OPENAI_DEPLOYMENT_NAME}",
        "Temperature": 0.1,
        "MaxTokens": 4000,
        "IsEnabled": true
      },
      "BehaviorProfiler": {
        "AgentId": "AGT-TXN-002",
        "Name": "Behavior Profiler",
        "AzureAgentId": "${AGENT_BEHAVIOR_PROFILER_ID}",
        "ModelDeployment": "${AZURE_OPENAI_DEPLOYMENT_NAME}",
        "Temperature": 0.1,
        "MaxTokens": 4000,
        "IsEnabled": true
      },
      "RiskScorer": {
        "AgentId": "AGT-TXN-003",
        "Name": "Risk Scorer",
        "AzureAgentId": "${AGENT_RISK_SCORER_ID}",
        "ModelDeployment": "${AZURE_OPENAI_DEPLOYMENT_NAME}",
        "Temperature": 0.0,
        "MaxTokens": 2000,
        "IsEnabled": true
      },
      "TerminalMonitor": {
        "AgentId": "AGT-POS-001",
        "Name": "Terminal Monitor",
        "AzureAgentId": "${AGENT_TERMINAL_MONITOR_ID}",
        "ModelDeployment": "${AZURE_OPENAI_DEPLOYMENT_NAME}",
        "Temperature": 0.1,
        "MaxTokens": 4000,
        "IsEnabled": true
      },
      "AgentProfiler": {
        "AgentId": "AGT-POS-002",
        "Name": "Agent Profiler",
        "AzureAgentId": "${AGENT_PROFILER_ID}",
        "ModelDeployment": "${AZURE_OPENAI_DEPLOYMENT_NAME}",
        "Temperature": 0.1,
        "MaxTokens": 4000,
        "IsEnabled": true
      },
      "MuleHunter": {
        "AgentId": "AGT-POS-003",
        "Name": "Mule Hunter",
        "AzureAgentId": "${AGENT_MULE_HUNTER_ID}",
        "ModelDeployment": "${AZURE_OPENAI_DEPLOYMENT_NAME}",
        "Temperature": 0.1,
        "MaxTokens": 4000,
        "IsEnabled": true
      },
      "IdentityVerifier": {
        "AgentId": "AGT-IDN-001",
        "Name": "Identity Verifier",
        "AzureAgentId": "${AGENT_IDENTITY_VERIFIER_ID}",
        "ModelDeployment": "${AZURE_OPENAI_DEPLOYMENT_NAME}",
        "Temperature": 0.1,
        "MaxTokens": 4000,
        "IsEnabled": true
      },
      "SyntheticDetector": {
        "AgentId": "AGT-IDN-002",
        "Name": "Synthetic Identity Detector",
        "AzureAgentId": "${AGENT_SYNTHETIC_DETECTOR_ID}",
        "ModelDeployment": "${AZURE_OPENAI_DEPLOYMENT_NAME}",
        "Temperature": 0.1,
        "MaxTokens": 4000,
        "IsEnabled": true
      }
    }
  },
  
  "Jwt": {
    "Secret": "${JWT_SECRET_KEY}",
    "Issuer": "SentinelAI",
    "Audience": "SentinelAI.Clients",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  
  "Encryption": {
    "MasterKey": "${ENCRYPTION_MASTER_KEY}",
    "Salt": "${ENCRYPTION_SALT}",
    "KeySize": 256,
    "Iterations": 100000
  },
  
  "RateLimiting": {
    "EnableRateLimiting": true,
    "PermitLimit": 100,
    "WindowSeconds": 60,
    "QueueLimit": 10
  },
  
  "ExternalServices": {
    "NIBSS": {
      "BaseUrl": "${NIBSS_API_BASE_URL}",
      "ApiKey": "${NIBSS_API_KEY}",
      "TimeoutSeconds": 30
    },
    "NIMC": {
      "BaseUrl": "${NIMC_API_BASE_URL}",
      "ApiKey": "${NIMC_API_KEY}",
      "TimeoutSeconds": 30
    },
    "Telco": {
      "MTN": {
        "BaseUrl": "${MTN_API_BASE_URL}",
        "ApiKey": "${MTN_API_KEY}"
      },
      "Airtel": {
        "BaseUrl": "${AIRTEL_API_BASE_URL}",
        "ApiKey": "${AIRTEL_API_KEY}"
      },
      "Glo": {
        "BaseUrl": "${GLO_API_BASE_URL}",
        "ApiKey": "${GLO_API_KEY}"
      }
    }
  },
  
  "HealthChecks": {
    "EnableDetailedErrors": false,
    "CacheDurationSeconds": 30
  },
  
  "Cors": {
    "AllowedOrigins": [
      "https://localhost:3000",
      "https://sentinel-dashboard.azurewebsites.net"
    ]
  },
  
  "Swagger": {
    "Title": "SENTINEL AI API",
    "Description": "Modular AI-Powered Fraud Detection Platform for Nigerian Financial Institutions",
    "Version": "v1",
    "ContactName": "SENTINEL AI Support",
    "ContactEmail": "support@sentinel-ai.com"
  }
}
